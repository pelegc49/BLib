<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_LEFT" spacing="20" styleClass="root-container" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.client.BookTitleController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <!-- Title and Author -->
        <VBox spacing="10" styleClass="section-container">
            <children>
                <HBox spacing="10" styleClass="info-row">
                    <children>
                        <Label styleClass="info-label" text="Title:" />
                        <Text fx:id="txtTitle" styleClass="info-text" text="Text" />
                    </children>
                </HBox>
                <HBox spacing="10" styleClass="info-row">
                    <children>
                        <Label styleClass="info-label" text="Author Name:" />
                        <Text fx:id="txtAuthorName" styleClass="info-text" text="Text" />
                    </children>
                </HBox>
                <HBox spacing="10" styleClass="info-row">
                    <children>
                        <Label styleClass="info-label" text="Genre:" />
                        <Text fx:id="txtGenre" styleClass="info-text" text="Text" />
                    </children>
                </HBox>
            <HBox spacing="10" styleClass="info-row">
               <children>
                      <Label styleClass="info-label" text="Description:" />
                      <Text fx:id="txtDescription" styleClass="info-text" text="Text" wrappingWidth="350" />
               </children>
            </HBox>
            </children>
        </VBox>

        <!-- Book Table -->
        <TableView fx:id="bookTable" prefHeight="159.0" prefWidth="463.0" styleClass="table-view">
            <placeholder>
                <Label fx:id="lblDueDate" styleClass="placeholder-label" text="" />
            </placeholder>
            <columns>
                <TableColumn fx:id="columnBookId" prefWidth="222.0" styleClass="table-column" text="Book ID" />
                <TableColumn fx:id="columnShelf" prefWidth="242.0" styleClass="table-column" text="Shelf" />
            </columns>
        </TableView>

        <!-- Buttons and Error Label -->
        <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="action-container">
            <children>
                <Label fx:id="lblError" styleClass="error-label" textFill="RED" />
                <Button fx:id="btnOrder" onAction="#orderBtn" styleClass="primary-button" text="Order" />
                <Button fx:id="btnBack" onAction="#backBtn" styleClass="secondary-button" text="Back" />
            </children>
        </HBox>
    </children>
</VBox>
