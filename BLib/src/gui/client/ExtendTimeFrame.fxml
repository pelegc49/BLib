<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20" styleClass="root-container" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.client.ExtendTimeController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <children>
        <!-- Table Section -->
        <TableView fx:id="tableBook" prefHeight="352.0" prefWidth="651.0" styleClass="table-view">
            <columns>
                <TableColumn fx:id="columnCheckBox" minWidth="0.0" prefWidth="92.0" styleClass="table-column" text="Select All">
                    <graphic>
                        <CheckBox fx:id="checkBoxSelectAll" mnemonicParsing="false" onMouseClicked="#selectAllBtn" styleClass="select-all-checkbox" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="columnAuthor" minWidth="8.0" prefWidth="217.0" styleClass="table-column" text="Author" />
                <TableColumn fx:id="columnTitle" prefWidth="185.0" styleClass="table-column" text="Title" />
                <TableColumn fx:id="columnDueDate" prefWidth="133.0" styleClass="table-column" text="Due Date" />
                <TableColumn fx:id="columnErrorMessage" prefWidth="530.0" styleClass="table-column" text="Message" />
            </columns>
        </TableView>

        <!-- Buttons and Error Label -->
        <HBox alignment="CENTER_RIGHT" spacing="20" styleClass="action-container">
            <children>
                <Label fx:id="lblError" styleClass="error-label" textFill="#009600" />
                <Button fx:id="btnExtend" onAction="#extendBtn" styleClass="primary-button" text="Extend" />
                <Button fx:id="btnBack" onAction="#backBtn" styleClass="secondary-button" text="Back" />
            </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
        </HBox>
    </children>
</VBox>
